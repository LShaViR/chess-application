generator erd {
  provider = "prisma-erd-generator"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id       String @id @default(uuid())
  email    String @unique
  name     String
  password String
  games    Game[]
}

model Game {
  id       String @id @default(uuid())
  playerId String
  player   Player @relation(fields: [playerId], references: [id])
  moves    Move[]
}

model Move {
  id     String @id @default(uuid())
  gameId String
  Game   Game   @relation(fields: [gameId], references: [id])
}
